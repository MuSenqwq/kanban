<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysUserMessageMapper">

    <resultMap type="SysUserMessage" id="SysUserMessageResult">
        <result property="messageId"    column="message_id"    />
        <result property="userId"    column="user_id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="type"    column="type"    />
        <result property="isRead"    column="is_read"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectSysUserMessageVo">
        select message_id, user_id, title, content, type, is_read, create_time from sys_user_message
    </sql>

    <select id="selectSysUserMessageList" parameterType="SysUserMessage" resultMap="SysUserMessageResult">
        <include refid="selectSysUserMessageVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="isRead != null  and isRead != ''"> and is_read = #{isRead}</if>
        </where>
        order by create_time desc
    </select>

    <insert id="insertSysUserMessage" parameterType="SysUserMessage" useGeneratedKeys="true" keyProperty="messageId">
        insert into sys_user_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="type != null">type,</if>
            <if test="isRead != null">is_read,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="type != null">#{type},</if>
            <if test="isRead != null">#{isRead},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateSysUserMessage" parameterType="SysUserMessage">
        update sys_user_message
        <trim prefix="SET" suffixOverrides=",">
            <if test="isRead != null">is_read = #{isRead},</if>
        </trim>
        where message_id = #{messageId}
    </update>

    <select id="countUnreadMessages" resultType="int">
        select count(1) from sys_user_message where user_id = #{userId} and is_read = '0'
    </select>
</mapper>